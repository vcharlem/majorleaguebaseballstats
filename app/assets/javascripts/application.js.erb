      $("#players").hide();
      $("#players_search").hide(); 

      $('#loading').show();

      var cnt = <%= Player.count %>
      // alert(cnt);
    })

  $("#players_search input").keyup(
  	function() {
    $.get($("#players_search").attr("action"), $("#players_search").serialize(), null, "script");
